<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.StemActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/backiconId"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_weight="1.9"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".1"
                android:gravity="center"
                android:text="Academic Point"
                android:textColor="@color/white1"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_4sdp"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_8sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="8">

                <ImageView
                    android:id="@+id/imStemOneId"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_weight=".6"
                    android:src="@drawable/stem_icon_one"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginLeft="-1dp"
                    android:layout_marginRight="-4dp"
                    android:layout_weight=".4"
                    android:src="@drawable/ic_minus"
                    tools:ignore="ContentDescription" />


                <ImageView
                    android:id="@+id/imStremTwoId"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_weight=".6"

                    android:src="@drawable/stem_icon_two" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginLeft="-1dp"
                    android:layout_marginRight="-4dp"
                    android:layout_weight=".4"
                    android:src="@drawable/ic_minus"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imStemThreeId"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_weight=".6"

                    android:src="@drawable/stem_icon_three" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginLeft="-1dp"
                    android:layout_marginRight="-4dp"
                    android:layout_weight=".4"
                    android:src="@drawable/ic_minus"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imStemFourId"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_weight=".6"

                    android:src="@drawable/stem_icon_four" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginLeft="-1dp"
                    android:layout_marginRight="-4dp"
                    android:layout_weight=".4"
                    android:src="@drawable/ic_minus"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imStemFiveId"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_weight=".6"

                    android:src="@drawable/stem_icon_one" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginLeft="-1dp"
                    android:layout_marginRight="-4dp"
                    android:layout_weight=".4"
                    android:src="@drawable/ic_minus"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imStemSixId"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_weight=".6"

                    android:src="@drawable/stem_icon_two" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginLeft="-1dp"
                    android:layout_marginRight="-4dp"
                    android:layout_weight=".4"
                    android:src="@drawable/ic_minus"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imStemsevenId"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_weight=".6"
                    android:src="@drawable/stem_icon_three" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginLeft="-1dp"
                    android:layout_marginRight="-4dp"
                    android:layout_weight=".4"
                    android:src="@drawable/ic_minus"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/imStemeightId"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_weight=".6"

                    android:src="@drawable/stem_icon_four" />


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>